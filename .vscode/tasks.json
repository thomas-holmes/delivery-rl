{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run muncher",
            "identifier": "runMuncher",
            "type": "process",
            "windows": {
                "command": "${workspaceFolder}/run_dir/deliveryrl.exe"
            },
            "linux": {
                "command": "${workspaceFolder}/run_dir/deliveryrl",
            },
            "options": {
                "cwd": "${workspaceFolder}/run_dir"
            },
            "args": [
                "-no-vsync"
            ],
            "isBackground": false,
            "problemMatcher": [],
            "dependsOn": "buildMuncher"
        },
        {
            "label": "build",
            "identifier": "buildMuncher",
            "type": "process",
            "windows": {
                "command": "go.exe",
                "args": [
                    "build",
                    "-v",
                    "-o",
                    "deliveryrl.exe",
                    "github.com/thomas-holmes/delivery-rl/game",
                ],
            },
            "linux": {
                "command": "go",
                "args": [
                    "build",
                    "-o",
                    "deliveryrl",
                    "github.com/thomas-holmes/delivery-rl/game"
                ],
            },
            "options": {
                "cwd": "${workspaceFolder}/run_dir"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": false,
            "problemMatcher": []
        },
        {
            "label": "test",
            "identifier": "testMuncher",
            "type": "process",
            "windows": {
                "command": "go.exe",
            },
            "linux": {
                "command": "go",
            },
            "options": {
                "cwd": "${workspaceFolder}/run_dir"
            },
            "args": [
                "test",
                "github.com/thomas-holmes/delivery-rl/game"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "isBackground": false,
            "problemMatcher": []
        }
    ]
}