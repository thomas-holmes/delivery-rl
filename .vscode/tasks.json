{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run muncher",
            "identifier": "runMuncher",
            "type": "process",
            "windows": {
                "command": "${workspaceFolder}/example/muncher/muncher.exe",
            },
            "linux": {
                "command": "${workspaceFolder}/example/muncher/muncher",
            },
            "options": {
                "cwd": "${workspaceFolder}/example/muncher"
            },
            "isBackground": false,
            "problemMatcher": [],
            "dependsOn": "buildMuncher"
        },
        {
            "label": "build",
            "identifier": "buildMuncher",
            "type": "process",
            "windows": {
                "command": "go.exe",
            },
            "linux": {
                "command": "go",
            },
            "options": {
                "cwd": "${workspaceFolder}/example/muncher"
            },
            "args": [
                "build",
                "github.com/thomas-holmes/gterm/example/muncher"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": false,
            "problemMatcher": []
        },
        {
            "label": "test",
            "identifier": "testMuncher",
            "type": "process",
            "windows": {
                "command": "go.exe",
            },
            "linux": {
                "command": "go",
            },
            "options": {
                "cwd": "${workspaceFolder}/example/muncher"
            },
            "args": [
                "test",
                "github.com/thomas-holmes/gterm/example/muncher"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "isBackground": false,
            "problemMatcher": []
        }
    ]
}